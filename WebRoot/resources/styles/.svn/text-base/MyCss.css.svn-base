html,body {
	width: 100%;
	height: 100%;
	margin: 0;
}

BODY {
	font-family: "ÑÅºÚ", "ËÎÌå", arial;
	FONT-SIZE: 12px;
	background-color: #FFFFFF;
	PADDING-RIGHT: 0px;
	PADDING-LEFT: 0px;
	FONT-SIZE: 12px;
	PADDING-BOTTOM: 0px;
	MARGIN: 0px;
	COLOR: #333;
